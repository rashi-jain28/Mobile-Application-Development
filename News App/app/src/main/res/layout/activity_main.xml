<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rashi.hw04.MainActivity">

    <EditText
        android:id="@+id/categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/categories" />

    <Button
        android:id="@+id/go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/categories"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:text="@string/Go" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/categories"
        android:layout_alignStart="@+id/categories"
        android:layout_below="@+id/go"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="33dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/publishedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/publishedAt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:clickable="true"
        app:srcCompat="@android:drawable/list_selector_background" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/hidden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/show"
        android:layout_alignLeft="@+id/show"
        android:layout_alignStart="@+id/show"
        android:layout_marginBottom="24dp"
        android:text="@string/hidden"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/next"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignEnd="@+id/go"
        android:layout_alignRight="@+id/go"
        android:layout_alignTop="@+id/previous"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/next" />

    <ImageButton
        android:id="@+id/previous"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/show"
        android:layout_alignLeft="@+id/categories"
        android:layout_alignStart="@+id/categories"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/prev" />

</RelativeLayout>
